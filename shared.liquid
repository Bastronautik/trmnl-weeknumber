{% assign current_timestamp = trmnl.system.timestamp_utc %}
{% assign current_week = current_timestamp | date: "%V" | plus: 0 %}
{% assign total_weeks = 52.0 %}
{% assign progress_pct = current_week | divided_by: total_weeks | times: 100 %}

{% if progress_pct > 100 %}
{% assign progress_pct = 100 %}
{% endif %}

